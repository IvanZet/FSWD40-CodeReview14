{% extends 'base.html.twig' %}
{% block title %}Edit event{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
	<!-- Bootstrap CSS -->
  <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
{% endblock %}

{% block body %}
	<div class="container">
		<a href="{{ path('events') }}"><button type="button" class="btn btn-outline-primary my-3">Back to all Events</button></a><br>
		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
		{{ form_widget(form) }}
		{{ form_end(form) }}
	</div>
{% endblock %}